# Local dev against RTDB emulator
VITE_FB_USE_EMULATOR=true
VITE_FB_EMULATOR_HOST=127.0.0.1
VITE_FB_EMULATOR_PORT=9000
# Namespace used by the emulator (should match projectId below)
VITE_FB_EMULATOR_NS=demo-bananagrams

# Minimal app config (emulator ignores secrets but needs a projectId)
VITE_FB_PROJECT_ID=demo-bananagrams
VITE_FB_DATABASE_URL=https://demo-bananagrams.firebaseio.com
VITE_FB_API_KEY=dummy
VITE_FB_AUTH_DOMAIN=dummy.firebaseapp.com
VITE_FB_APP_ID=dummy
